<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="320dp"
    android:background="@drawable/alert"
    android:padding="0dp"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginTop="2dp"
        android:fontFamily="@font/aviano"
        app:fontFamily="@font/aviano"
        android:gravity="top"
        android:text="Task Done!"
        android:textColor="@android:color/white"
        android:textSize="19dp" />

    <TextView
        android:id="@+id/solved"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginTop="35dp"
        android:fontFamily="@font/aviano"
        app:fontFamily="@font/aviano"
        android:text="Solved by 67%"
        android:textColor="@android:color/white"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/time_u"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/aviano"
        app:fontFamily="@font/aviano"
        android:text="Avarage time : 20 sec"
        android:textColor="@android:color/white"
        android:textSize="18dp" />


    <TextView
        android:id="@+id/time_a"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/aviano"
        app:fontFamily="@font/aviano"
        android:text="Your time : 25 sec"
        android:textColor="@android:color/white"
        android:textSize="18dp" />

    <Button
        android:id="@+id/next"
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/button"
        android:fontFamily="@font/aviano"
        app:fontFamily="@font/aviano"
        android:textStyle="bold"
        android:text="Next Task"
        android:textColor="#131111" />


</LinearLayout>

